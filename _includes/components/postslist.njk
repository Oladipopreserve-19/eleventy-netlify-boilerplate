<section>
	{% for post in postslist | reverse %}
		  <div class="blog-card">
    <div class="meta">
      <div class="photo" style="background-image: url( {{ image }} )"></div>
      <ul class="details">
        <li class="author"><a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></li>
        <li class="date"><time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }} by </small>
				</time></li>
        <li class="tags">
          <ul style="display:flex; flex-direction: row;">
            {% if post.data.tags %}
				<li>
					{% for tag in post.data.tags %}
		  			{%- if tag != "post" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</li>
			{% endif %}
          </ul>
        </li>
      </ul>
    </div>
    <div class="description">
      <h1>	<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a></h1>
      
      {% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
			{% endif %}
      <p class="read-more">
           <a href="{{ post.url | url }}">Read More</a>
      </p>
    </div>
  </div>
	{% endfor %}

	 </section>
